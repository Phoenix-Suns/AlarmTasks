<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--subHeader-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/Common.DividerHorizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/demo_text"
            style="@style/Common.text_subhead.light"
            android:textColor="@color/common_primary"
            android:padding="@dimen/common_listItem_padding"/>

    </LinearLayout>

    <!--item-->
    <LinearLayout
        android:orientation="horizontal"
        style="@style/Common.ListItemContent">

        <ImageView
            style="@style/Common.ListItemIcon"
            android:src="@android:drawable/ic_menu_call"/>
        
        <LinearLayout
            android:orientation="vertical"
            style="@style/Common.ListItemTitle">
            
            <TextView
                style="@style/Common.text_body.light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title" />

            <TextView
                style="@style/Common.text_caption.light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description" />
            
        </LinearLayout>
        
        <ImageView
            style="@style/Common.ListItemSubIcon"
            android:src="@android:drawable/ic_btn_speak_now"/>

    </LinearLayout>

</LinearLayout>