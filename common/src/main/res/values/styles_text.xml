<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Chữ lớn, khẩu hiệu, gây chú ý mạnh-->
    <!--Header xxxx large-->
    <style name="Common.text_display_4">
        <item name="android:textSize">@dimen/Common.text_display_4</item>
        <item name="android:textColor">@color/Common.text_secondary.dark</item>
    </style>

    <!--Header xxx large-->
    <style name="Common.text_display_3">
        <item name="android:textSize">@dimen/Common.text_display_3</item>
        <item name="android:textColor">@color/Common.text_secondary.dark</item>
    </style>

    <!--Header xx large-->
    <style name="Common.text_display_2">
        <item name="android:textSize">@dimen/Common.text_display_2</item>
        <item name="android:textColor">@color/Common.text_secondary.dark</item>
    </style>

    <!--Header x large-->
    <style name="Common.text_display_1">
        <item name="android:textSize">@dimen/Common.text_display_1</item>
        <item name="android:textColor">@color/Common.text_secondary.dark</item>
    </style>

    <!--dùng Đầu Trang, đầu Activity (ActionBar) -->
    <style name="Common.text_headline">
        <item name="android:textSize">@dimen/Common.text_headline</item>
        <item name="android:textColor">@color/Common.text_primary.dark</item>
    </style>

    <!--Tiêu đề nhỏ - Nổi bật mỗi dòng - nội dung chính (ListView) -->
    <style name="Common.text_title">
        <item name="android:textSize">@dimen/Common.text_title</item>
        <item name="android:textColor">@color/Common.text_primary.dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Header nhỏ, phân cách nhóm Item (List Item)-->
    <style name="Common.text_subhead">
        <item name="android:textSize">@dimen/Common.text_body</item>
        <item name="android:textColor">@color/Common.text_primary.dark</item>
    </style>

