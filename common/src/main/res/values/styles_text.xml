    <style name="Common.text_body">
        <item name="android:textSize">@dimen/Common.text_body</item>
        <item name="android:textColor">@color/Common.text_primary.dark</item>
    </style>

    <!--Chữ chính - In đậm-->
    <style name="Common.text_body_bold">
        <item name="android:textSize">@dimen/Common.text_body</item>
        <item name="android:textColor">@color/Common.text_primary.dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Chữ phụ nhỏ, dùng dưới footer(dấu trang) -->
    <style name="Common.text_caption">
        <item name="android:textSize">@dimen/Common.text_caption</item>
        <item name="android:textColor">@color/Common.text_secondary.dark</item>
    </style>

    <!--Chữ của nút-->
    <style name="Common.text_button">
        <item name="android:textSize">@dimen/Common.text_button</item>
        <item name="android:textColor">@color/Common.text_primary.dark</item>
    </style>


