<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_accent</item>

        <!--Font & Text-->
        <item name="android:fontFamily">@font/font_roboto</item>
        <item name="fontFamily">@font/font_roboto</item>

        <!--Show Cab menu On ActionBar-->
        <item name="actionModeStyle">@style/AppActionMode</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--Action Mode ToolBar-->
    <style name="AppActionMode" parent="@style/Widget.AppCompat.Light.ActionMode.Inverse">
        <item name="background">@color/app_primary</item>
        <item name="android:background">@color/app_primary</item>
        <item name="android:actionModeBackground">@color/app_primary</item>
        <item name="actionModeBackground">@color/app_primary</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>

        <!--Action Bar Background-->
        <item name="android:actionModeBackground">@color/app_primary_dark</item>

        <!--<item name="actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
    </style>


    <!--#region ListItem Style-->
    <style name="ListItem"></style>

    <style name="ListItem.Alarm"></style>

    <style name="ListItem.Alarm.RepeatDay">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/selector_text_repeat_day_black</item>
        <item name="android:paddingRight">@dimen/Common.spacing_medium</item>
        <item name="android:clickable">false</item>
    </style>
    <!--#endregion-->


    <!--#region EditItem Style-->
    <style name="EditItem"></style>
    <style name="EditItem.Alarm"></style>
    <style name="EditItem.Alarm.RepeatDay">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/selector_text_repeat_day_white</item>
        <item name="android:textSize">@dimen/app_text_medium</item>
        <item name="android:padding">@dimen/Common.spacing_medium</item>
    </style>

    <style name="text_bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="time_big" parent="text_bold">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">center</item>
        <!--<item name="android:textAppearance">@dimen/app_text_display_3</item>-->
        <item name="android:textSize">90sp</item>
    </style>
    <!--#endregion-->

</resources>
